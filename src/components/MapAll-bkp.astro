<script>
  var map = L.map('map').setView([0,0], 1);
  //TileLayer - Map Panes
  L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
  maxZoom: 19,
  attribution: '&copy; <a href="http://www.openstreetmap.org/copyright">OpenStreetMap</a>'
  }).addTo(map);

  //Circles
  var circle = L.circle([53.34, -6.26], { 
  color: 'purple',
  fillColor: 'none',
  radius: 50000,
  }).addTo(map);
  circle.bindPopup("Dublin");
  
  var circle = L.circle([53.27, -9.05], {
  color: 'purple',
  fillColor: 'none',
  radius: 50000,
  }).addTo(map);
  circle.bindPopup("Galway");

  //Markers and Popups with link
  var points = [
    ["Hotel Green", 53.34, -6.80, "../hotel-green"],
    ["Hotel Red", 53.27, -9.10, "../hotel-red"],
    ["Hotel Yellow", 53.27, -9.00, "../hotel-yellow"]
  ];
  var marker = [];
  var i;
    for (i = 0; i < points.length; i++) {
      marker[i] = new L.Marker([points[i][1], points[i][2]], {
        win_url: points[i][3]
      });
      marker[i].addTo(map);
      marker[i].labels();
      marker[i].on('click', onClick);
    };
  
function onClick(e) {
  console.log(this.options.win_url);
  window.open(this.options.win_url);
}
</script>

