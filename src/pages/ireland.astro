---
import Header from '../components/Header.astro';
import Nav from '../components/Nav.astro';
import Search from '../components/Search.astro'; 
import Footer from '../components/Footer.astro';
import { Debug } from 'astro:components';
import '../styles/fontawesome.min.css'; 
import '../styles/all.min.css';
import '../styles/main.css';
import '../styles/leaflet.css';
import L from 'leaflet';
import 'leaflet/dist/leaflet.css';

export interface Props {
  title: string;
  description: string;
}

const { description, title }: Props = Astro.props;

---
<!DOCTYPE html>
<html lang="en">
<head>
  <!--Responsive Behavior -->
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <!--Google Font Styles-->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
  <!--Font Awesome Styles-->
  <script src="https://kit.fontawesome.com/a1ec5d8fd9.js" crossorigin="anonymous"></script>  
  <!--Bootstrap CSS-->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <!--Bootstrap JS-->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>  
  <!--Leaflet CSS and JS-->
  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin=""/>
  <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>
  <script src="https://cdn.maptiler.com/maptiler-sdk-js/v2.0.3/maptiler-sdk.umd.js"></script>
  <link href="https://cdn.maptiler.com/maptiler-sdk-js/v2.0.3/maptiler-sdk.css" rel="stylesheet" />
  <script src="https://cdn.maptiler.com/leaflet-maptilersdk/v2.0.0/leaflet-maptilersdk.js"></script>
  <!--Map Page Style-->
  <style> 
    #map {position:absolute; top: 0; right: 0; bottom: 0; left: 0; z-index: 2;}
    .wrap-map {position:static; width:60%; height: 400px; margin: 100px 20% 0;}
    .table-responsive {align-items: center; width: 60%; padding: 0 20%; margin-left: auto; margin-right: auto;}
    p {border-collapse: collapse; margin: 50px 20%; margin-bottom: 10px;}
    table { border-collapse: collapse; margin: 10px 20%; padding: 10px;}
    td {padding: 10px; border: 2px solid #ddd;}
    tr:nth-child(even) {background-color: #f2f2f2;}
    th {border: 2px solid #ddd;width: 100px;}
    .hotel-image {min-width: 200px;}
  </style>
</head>
<body>
    <Header />
    <Nav />
      <main>
        <iframe class="wrap-map" src="../map-ireland.html"></iframe>

        <!-- Calculate total of found Hotels in this destination -->
<script>
  let y = "IRELAND";
  let x = document.getElementById("destination").options.length;
  document.getElementById("found").innerHTML = " HOTEL IN " + y + " *Found total of  " + x + "properties" ;
</script>

<datalist id="destination">
  <option value="Hotel 1"><a href="../hotel1">Hotel 1</a></option>
  <option value="Hotel 2"><a href="../hotel2">Hotel 2</a></option>
  <option value="Hotel 3"><a href="../hotel3">Hotel 3</a></option>
</datalist>

<table class="table-responsive">
<p><i class="fa-solid fa-home"></i><span id="found" myFunction()></p>
</table>

<table class="table-responsive">
  <!--
  <thead>
    <tr>
      <th scope="col">HOTEL</th>
      <th scope="col">DETAILS</th>
    </tr>
  </thead>
  -->
  <tbody>
    <tr>
      <td><img class="hotel-image" src="images/green-room.png"></td>
      <td>Dublin, Ireland <br> HOTEL GREEN <br> Hotel Green is a stylish and modern hotel located 
        in the heart of Dublin, Ireland. The hotel boasts 138 luxurious rooms and suites, each equipped with comfortable beds, 
        flat-screen TVs, and complimentary Wi-Fi. Guests can enjoy stunning views of the city from many 
        of the rooms, and amenities include a 24-hour fitness center, spa, and business center.</td>
    </tr>
    <tr>
      <td><img class="hotel-image" src="images/pool.png"></td>
      <td>Galway, Ireland <br> HOTEL RED <br> Hotel Red is a boutique hotel located in the heart of Galway City, 
        Ireland's vibrant cultural hub. The hotel's 40 rooms and suites are designed to provide a unique and intimate
         experience. The hotel is also close to many of Galway's top attractions,
          including the Latin Quarter, Eyre Square, and the famous Salthill Promenade. 
        With its stunning architecture, lively atmosphere, and warm hospitality, Hotel Red is the perfect place to experience the charm of Galway City.</td>
    </tr>
    <tr>
      <td><img class="hotel-image" src="images/yellow-room.png"></td>
      <td>Galway, Ireland <br> HOTEL YELLOW <br> Hotel Yellow is a charming boutique hotel located in the heart of 
        Galway City, Ireland, within walking distance to many of the city's top attractions. The hotel's 20 stylish 
        rooms and suites are decorated with a vibrant yellow color scheme and feature luxurious amenities such as 
        plush beds, flat-screen TVs, and complimentary Wi-Fi. Guests can enjoy a
         delicious breakfast in the hotel's cozy breakfast room, or relax in the hotel's comfortable lounge area 
         with a cup of coffee or a glass of wine. </td>
    </tr>
  </tbody>
</table>
      </main>
    <Footer />
</body>
</html>